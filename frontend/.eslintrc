{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
	"ecmaFeatures": {
	  "jsx": true
    }
    },
    "plugins": [
        "react"
    ],
    "rules": {
	"react/no-unknown-property": "off",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": "warn",
        "react/prop-types": "off",
	"no-undef": "off",
	"react/no-unknow-property": "off",
	"react/react-in-jsx-scope": "off"
    }
}
